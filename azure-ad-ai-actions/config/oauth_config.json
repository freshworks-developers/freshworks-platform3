{
  "integrations": {
    "microsoft_graph": {
      "display_name": "Microsoft Graph API",
      "client_id": "<%= oauth_iparams.client_id %>",
      "client_secret": "<%= oauth_iparams.client_secret %>",
      "authorize_url": "https://login.microsoftonline.com/common/oauth2/v2.0/authorize",
      "token_url": "https://login.microsoftonline.com/common/oauth2/v2.0/token",
      "token_type": "account",
      "options": {
        "scope": "User.ReadWrite.All Directory.ReadWrite.All"
      },
      "oauth_iparams": {
        "client_id": {
          "display_name": "Azure AD Application (Client) ID",
          "description": "The Application (Client) ID from your Azure AD app registration",
          "type": "text",
          "required": true
        },
        "client_secret": {
          "display_name": "Azure AD Client Secret",
          "description": "The Client Secret value from your Azure AD app registration",
          "type": "text",
          "required": true,
          "secure": true
        }
      }
    }
  }
}
